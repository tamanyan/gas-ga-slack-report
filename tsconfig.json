{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "pretty": true,
    "strictNullChecks": true,
    "typeRoots" : ["./@types", "./node_modules/@types"]
  }
}
